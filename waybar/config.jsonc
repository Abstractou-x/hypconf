{
    "position":"top",
    "layer": "top",
    "width":1800,
    "height":30,
    "spacing": 10,
    "margin-top": 8,
    "modules-left": [
	    "custom/apps",
	    "hyprland/workspaces"
    ],
    "modules-center":[
        "custom/media"
    ],

    "modules-right":[
	    "custom/notification",
	    "hyprland/language",
	    "custom/brightness",
	    "custom/volume",
	    "custom/microphone",
	    "network",
	    "battery",
            "clock",
	    "custom/power"
    ],

    "hyprland/language": {
	    "format": "{short} {variant}",
	    "on-click": "rofi -show keyboard -modi keyboard:~/.config/rofi/sh/keyboard.sh -config ~/.config/rofi/config.rasi"
    },

    "custom/power": {
	    "format": "‚èª",
	    "on-click": "rofi -show power-menu -modi power-menu:~/.config/rofi/sh/powermenu.sh -config ~/.config/rofi/powermenu.rasi"
    },

    "clock": {
	    "format": "ÔÄó  {:%H:%M %p}",
	    "tooltip": true,
	    "tooltip-format": "{}"

    },
    "custom/apps": {
	    "format": "Û∞£á",
	    "on-click": "rofi -show"
    },
    "network": {
     "format-wifi":"Ôá´   {essid}",
     "format-ethernet":"Ôõø  {ifname}",
     "format-disconnected":"Û∞ñ™"
    },

    "custom/brightness": {
	    "exec": "brightnessctl g",
	    "return-type": "raw",
	    "format": "Û∞çπ  {}%",
	    "interval": 1,
	    "tooltip": false,
	    "on-click": "brightnessctl s 100%",
	    "on-click-right": "brightnessctl s 25%"
    },

    "battery": {
        "format":"{icon} {capacity}%", 
        "format-icons":["Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"],
        "format-charging":"Û∞ÇÑ {capacity}%",
	"interval": 1
    },
    "custom/volume":{
	    "exec": "sh ~/sh/output.sh",
	    "return-type": "raw",
	    "format": "{}",
	    "interval": 1,
	    "on-click": "pavucontrol",
	    "on-click-right": "pamixer --toggle-mute"

    },
    "custom/microphone": {
	    "exec": "sh ~/sh/mic.sh",
	    "return-type": "raw",
	    	"format": "{}",
            "interval": 1,
	    "on-click": "pavucontrol",
	    "on-click-right": "pamixer --default-source --toggle-mute"
    },
    "custom/notification":{
	    "format":"Û∞Çö"
    },

//Middle side modules
    "custom/media": {
        "format": "üéú {}",
        "interval":3,
	"max-length": 20,
        "escape": true,
        "exec": "playerctl metadata --format='{{ title }}'"
    },

//LEFT SIDE MODULES


    "hyprland/workspaces": {
        "format":"{icon}",
        "sort-by-name":true,
        "format-icons":{
            "default":"‚è∫"
        }
    },
    
    "tray": {}
}
